<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Shimmer skeleton loader -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <include layout="@layout/skeleton_video_item" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Real content -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Title row with search and filter icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Videos"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Search"
                android:scaleType="centerInside"
                android:layout_marginEnd="4dp" />

            <ImageButton
                android:id="@+id/btnFilter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_filter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Filter"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Expandable search bar (hidden by default) -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Search videos..."
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="14sp"
            android:background="@drawable/bg_search_field"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Expandable filter chips (hidden by default) -->
        <HorizontalScrollView
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSubjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />

        </HorizontalScrollView>

        <!-- Empty state text -->
        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No videos found"
            android:textSize="15sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:paddingTop="32dp"
            android:visibility="gone" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVideos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</FrameLayout>
