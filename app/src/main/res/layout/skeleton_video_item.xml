                    android:background="@drawable/bg_shimmer_bar" />
                <View
                    android:layout_width="100dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_shimmer_bar" />
            </LinearLayout>
